"""
Grammar and parser for the tiny calculator
================

"""

?start: expr

?expr: expr term ";" -> expr_more
     | term ";"      -> expr_one

?term: term "+" int -> plus
     | term "-" int -> minus
     | term "*" int -> times
     | term "/" int -> divide
     | int

%import common.CNAME -> NAME
%import common.WS_INLINE

%ignore WS_INLINE
int: INT
INT: /^([+-}?[1-9]\d*|0)$/
